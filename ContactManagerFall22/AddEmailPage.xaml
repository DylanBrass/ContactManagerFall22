<Window x:Class="ContactManagerFall22.AddEmailPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ContactManagerFall22"
        mc:Ignorable="d"
        Title="AddEmailPage" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="Email" HorizontalAlignment="Left" Margin="377,74,0,0" VerticalAlignment="Top" Width="120"/>
        <RadioButton GroupName="Type" Content="Home" Margin="206,163,536,242" Checked="RadioButton_Checked" />
        <RadioButton GroupName="Type"  Content="Work" Margin="340,163,364,238" Checked="RadioButton_Checked"/>
        <RadioButton GroupName="Type" Content="Other" Margin="464,163,240,201" Checked="RadioButton_Checked" />

        <Button x:Name="AddEmailButton" Content="Add Email 📝" HorizontalAlignment="Left" Margin="340,330,0,0" 
                VerticalAlignment="Top" Height="26" Width="90" Grid.Column="1" Click="AddEmailButton_Click"/>

        <Label Content="Email" HorizontalAlignment="Left" Margin="264,71,0,0" VerticalAlignment="Top" Height="24" Width="103"/>

    </Grid>
</Window>
