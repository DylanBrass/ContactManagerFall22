<Window x:Class="ContactManagerFall22.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ContactManagerFall22"
        mc:Ignorable="d"
 Title="MainWindow" Height="450" Width="640">

    <Grid Margin="15,15,15,15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="309*"/>
            <ColumnDefinition Width="301*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" Grid.ColumnSpan="2" Margin="1,40,-1,10" Grid.RowSpan="2">
            <ListView Name="ContactsListItems" MouseDoubleClick="ContactsListItems_MouseDoubleClick" Height="278">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Favourite" Width="150" DisplayMemberBinding="{Binding Favourite}" />
                        <GridViewColumn Header="First Name" Width="150" DisplayMemberBinding="{Binding FirstName}" />
                        <GridViewColumn Header="Last Name" Width="150" DisplayMemberBinding="{Binding LastName}" />
                    </GridView>
                </ListView.View>
            </ListView>
        </ScrollViewer>

        <Button Name="Add_Contact_btn" Grid.Row="1" Margin="10,10,189,10" Content="Add Contact..." Click="Add_Contact_btn_Click" />

        <Button Name="Edit_Contact_btn" Grid.Row="1" Margin="130,10,69,10" Content="Edit Contact..." Click="Edit_Contact_btn_Click"/>

        <Button Name="Del_Contact_btn" Grid.Row="1" Margin="251,10,249,10" Content="Delete Contact... " Click="Del_Contact_btn_Click" Grid.ColumnSpan="2"/>

        <Button Name="Imp_Contact_btn" Grid.Row="1" Margin="61,10,130,10" Content="Import Contact..." Click="Imp_Contact_btn_Click" Grid.Column="1"/>

        <Button Name="Ex_Contact_btn" Grid.Row="1" Margin="181,10,10,10" Content="ExportContact..." Click="Ex_Contact_btn_Click" Grid.Column="1"/>

    </Grid>

</Window>
