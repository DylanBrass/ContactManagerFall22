<Window x:Class="ContactManagerFall22.AddPhoneNumber"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ContactManagerFall22"
        mc:Ignorable="d"
        Title="AddPhoneNumber" Height="450" Width="800">
    <Grid>


        <TextBox x:Name="PhoneNumber" HorizontalAlignment="Left" Margin="325,37,0,0" VerticalAlignment="Top" Width="120" Grid.Column="1"/>
        <RadioButton GroupName="Type" Content="Home" Margin="325,128,417,277" Checked="RadioButton_Checked" />
        <RadioButton GroupName="Type"  Content="Work" Margin="400,128,304,273" Checked="RadioButton_Checked"/>
        <RadioButton GroupName="Type" Content="Other" Margin="472,128,232,236" Checked="RadioButton_Checked" />

        <Button x:Name="AddEmailButton" Content="Add 📞" HorizontalAlignment="Left" Margin="340,330,0,0" 
                VerticalAlignment="Top" Height="26" Width="90" Grid.Column="1" Click="AddPhoneButton_Click"/>

        <Label Content="Phone Number" HorizontalAlignment="Left" Margin="212,34,0,0" VerticalAlignment="Top" Height="24" Width="103"/>

    </Grid>
</Window>
